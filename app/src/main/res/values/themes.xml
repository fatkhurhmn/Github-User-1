<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal_500</item>
        <item name="colorPrimaryVariant">@color/charcoal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunglow_200</item>
        <item name="colorSecondaryVariant">@color/sunglow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Text.WithLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.WithLabel.Small">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Text.WithLabel.Big">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Value.Big">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Text.Value.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Value.Small.WithIcon">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HelperLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Barrier">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>